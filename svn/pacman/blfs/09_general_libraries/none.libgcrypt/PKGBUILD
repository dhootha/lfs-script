pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc="A general purpose crypto library based on the code used"
arch=('i686' 'x86_64')
url="http://www.gnupg.org"
license=('LGPL')
groups=(${_groups})
depends=(${_depends})
options=('!libtool' '!emptydirs')
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-static
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}

