pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc="File type identification utility"
arch=('i686' 'x86_64')
url="http://www.darwinsys.com/file/"
license=('LGPL3')
groups=('base')
depends=('glibc' 'zlib')
options=(!libtool)
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
#  ./configure --prefix=/usr --enable-cxx --enable-mpbsd
  ./configure --prefix=/usr
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}

