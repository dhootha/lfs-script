pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url="http://www.multiprecision.org/"
license=('')
groups=('base')
depends=()
options=()
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make || return 1
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:
