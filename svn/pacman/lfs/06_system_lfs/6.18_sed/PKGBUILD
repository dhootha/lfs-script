pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc="GNU stream editor"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/sed"
license=('GPL3')
groups=('base')
depends=()
makedepends=()
options=(!libtool)
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

#  patch -Np1 -i ../${pkgname}-${pkgver}-testsuite_fixes-1.patch

  ./configure --prefix=/usr --bindir=/bin
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}

