pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc="Utilities for monitoring your system and processes on your system"
arch=('i686' 'x86_64')
url="http://procps.sourceforge.net/"
license=('GPL' 'LGPL')
groups=('base')
depends=('ncurses')
makedepends=()
options=('!makeflags')
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr                           \
              --exec-prefix=                          \
              --libdir=/usr/lib                       \
              --docdir=/usr/share/doc/procps-ng-3.3.6 \
              --disable-static                        \
              --disable-skill                         \
              --disable-kill
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}

#  sed -i -e 's|exec which sleep|exec echo /tools/bin/sleep|' \
#         -e 's|&9|9999999|'             testsuite/config/unix.exp
  sed -i -r 's|(pmap_initname)\\\$|\1|' testsuite/pmap.test/pmap.exp

  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install

  install -d ${pkgdir}/{bin,lib}
  mv -v /usr/bin/pidof ${pkgdir}/bin
  mv -v ${pkgdir}/usr/lib/libprocps.so.* ${pkgdir}/lib
  ln -sfv ../../lib/`readlink ${pkgdir}/usr/lib/libprocps.so` ${pkgdir}/usr/lib/libprocps.so
}

