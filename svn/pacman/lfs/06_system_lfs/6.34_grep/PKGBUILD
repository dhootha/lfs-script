pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc="A string search utility"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/grep/grep.html"
license=('GPL3')
groups=('base')
depends=(${_depends})
makedepends=()
options=('')
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  sed -i 's/cp/#&/' tests/unibyte-bracket-expr
  ./configure --prefix=/usr --bindir=/bin
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}

