pkgname=${name}
pkgver=${version}
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url=""
license=('')
groups=('')
depends=('')
makedepends=()
options=('')
source=(${_url})
md5sums=(${md5})

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --with-readline
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  echo "quit" | ./bc/bc -l Test/checklib.b
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}

