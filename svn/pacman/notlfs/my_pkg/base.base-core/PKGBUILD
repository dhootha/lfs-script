  bash ../hostname.sh ${pkgdir}
  bash ../setclock.sh ${pkgdir}
#  bash ../console.sh ${pkgdir}
#  bash ../rc.site.sh ${pkgdir}
  bash ../profile.sh ${pkgdir}
  bash ../inputrc.sh ${pkgdir}
#  bash ../fstab.sh ${pkgdir}
  bash ../skel.sh ${pkgdir}
}

